Document "obus-dump-man"
  Type: custom (0.3)
  Title: Man page for obus-dump
  Install: true
  BuildTools: gzip
  XCustom: $gzip -c man/obus-dump.1 > man/obus-dump.1.gz
  XCustomClean: $rm man/obus-dump.1.gz
  DataFiles: man/obus-dump.1.gz
  InstallDir: $mandir/man1

